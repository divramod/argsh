#!/usr/bin/env argsh
# shellcheck shell=bash

# some globals
: "${PATH_BASE:="$(git rev-parse --show-toplevel)"}"

# setup args
# argsh(i|input): opt(INPUT) def(default value) des(set INPUT) val()
# argsh(v|variable): opt(VARIABLE) def(INPUT) val()
# argsh(simple-output): des(test output.)
# argsh(empty-default): opt(EMPTY) def()
# argsh(print): des(prints variable)

main() {
  # given actions
  for ACTION in ${ARGSH_ACTIONS}; do case "${ACTION}" in
  simple-output) wubba ;;
  print) print ;;
  esac; done
}

wubba() {
  echo "wubba lubba dub dub"
}

print() {
  eval "echo \${${VARIABLE}:?}"
}

has_default() {
  :
}

has_value() {
  :
}

is_exported() {
  :
}

[[ "${0}" != "${BASH_SOURCE[0]}" ]] || main "${@}"